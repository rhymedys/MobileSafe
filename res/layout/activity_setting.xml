<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cc.mobilesafe.activity.SettingActivity" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.cc.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.cc.mobilesafe"
        android:id="@+id/siv_Update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="自动更新已关闭"
        mobilesafe:deson="自动更新已开启"
        mobilesafe:destitle="自动更新设置" >
    </com.cc.mobilesafe.view.SettingItemView>
    
    <com.cc.mobilesafe.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.cc.mobilesafe"
        android:id="@+id/siv_set_is_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:desoff="归属地显示已关闭"
        mobilesafe:deson="归属地显示已开启"
        mobilesafe:destitle="电话归属地显示设置" >
    </com.cc.mobilesafe.view.SettingItemView>
   
    <com.cc.mobilesafe.view.SettingClickView
        android:id="@+id/scv_set_is_location_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.cc.mobilesafe.view.SettingClickView>
    
    
    
</LinearLayout>