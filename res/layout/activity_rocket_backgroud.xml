<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cc.mobilesafe.Activity.RocketBackgroudActivity" >

    <ImageView
        android:id="@+id/iv_desktop_smoke_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/desktop_smoke_m" />

    <ImageView
        android:id="@+id/iv_desktop_smoke_t"
        android:layout_width="wrap_content"
       android:layout_above="@id/iv_desktop_smoke_m"
        android:layout_height="wrap_content"
        android:background="@drawable/desktop_smoke_t" />

</RelativeLayout>